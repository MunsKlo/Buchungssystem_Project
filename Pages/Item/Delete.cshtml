@page
@model Buchungsystem_WindowsAuth.Pages.Item.DeleteModel
@{
}

<div class="text-center">
    <table class="table table-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Beschreibung</th>
        </tr>
        <tr>
            <td>@Model.Item.Id</td>
            <td>@Model.Item.Name</td>
            <td><span style="white-space: pre-line">@Model.Item.Description</span></td>
        </tr>
    </table>
    <h4>Tragen Sie die Id in das Nummernfeld ein, um die Löschung zu bestätigen!</h4>
    <form method="post">
        <div class="form-group">
            <input type="text" asp-for="FormId" required/>
        </div>
        <div class="form-group">
            <input type="submit" value="Bestätige"/>
        </div>
    </form>
    <h3>@Model.StatusMessage</h3>
</div>
